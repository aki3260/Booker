<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>
<h1>Books</h1>
<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th></th></tr>
		<% @books.each do |book| %>
		<tr>
			<td align="left"><%= book.title%></td>
			<td align="left"><%= book.body%></td>
			<td><%= link_to "Show", book_path(book.id)%></td>
			<td><%= link_to "Edit", edit_book_path(book.id)%></td>
			<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
			<% end %></table>
			<h1>New book</h1>
			<% if @book.errors.any? %>
			<div id="error_explanation">
				<h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
				<ul>
					<% @book.errors.full_messages.each do |msg| %>
					<li><%= msg %>
					</li>
					<% end %>
				</ul>
				</div>
					<% end %>
			<%= form_for(@book) do |f| %>
			<h4>Title</h4><%= f.text_field :title%>
			<h4>Body</h4><%= f.text_area :body %>
			<%= f.submit 'Create Book' %>
			<% end %>